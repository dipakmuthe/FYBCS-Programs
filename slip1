create table hospital(hno int primary key,
hname varchar(20),
city varchar(20));

create table docter(dno int primary key,
dname varchar(30),
specialization varchar(30),
charges int,
hno int references hospital(hno));

insert into hospital values(101,'City hospital','Pune');
